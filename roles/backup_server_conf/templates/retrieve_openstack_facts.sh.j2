# Configure variables
export OS_AUTH_URL="{{ swift_authurl }}"
export OS_IDENTITY_API_VERSION={{ swift_authversion }}
export OS_TENANT_ID="{{ swift_tenantid }}"
export OS_TENANT_NAME="{{ swift_tenantname }}"
export OS_USERNAME="{{ swift_username }}"
export OS_PASSWORD="{{ swift_password }}"
export OS_REGION_NAME="{{ swift_regionname }}"

TODAY=`date +%F`

for container in `/usr/local/bin/swift list`
do
    file="/mnt/vdb/backup/cloud/$container.$TODAY"
    printf "DATE = $TODAY"  > $file
    printf "\n\n-- STATS --\n" >>  $file
    /usr/local/bin/swift stat --lh $container >> $file
    printf "\n\n-- LIST FILES --\n" >> $file
    /usr/local/bin/swift list --lh $container >> $file
    cp $file /mnt/vdb/backup/cloud/$container.latest
    chmod 644 $file /mnt/vdb/backup/cloud/$container.latest
done
